generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum State {
  New
  Learning
  Review
}

model Card {
  id             String   @id
  front          String
  back           String
  material       Material? @relation(fields: [materialId], references: [id])
  materialId     String?   // Card belongs to Material (optional)
  due            DateTime
  stability      Float
  difficulty     Float
  elapsed_days   Int
  scheduled_days Int
  reps           Int
  lapses         Int
  state          State
  clerkUserId String  // ClerkのユーザーIDで管理

  @@map("cards") // Database table name
}

model Material {
  id          String  @id
  title       String
  description String
  tags        String[] // タグのリスト
  cards       Card[]
  clerkUserId String  // ClerkのユーザーIDで管理

  @@map("materials")
}